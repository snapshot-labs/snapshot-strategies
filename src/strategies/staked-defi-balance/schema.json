{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Staked Defi Balance",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "network": { "type": "string" },
      "snapshot": { "oneOf": [ { "type": "integer" }, { "type": "string", "enum": ["latest"] } ] },
      "tokenContractAddress": { "type": "string" },
      "symbol": { "type": "string" },
      "decimals": { "type": "integer" },
      "minStakedBalance": { "type": "string" },
      "stakingPoolContractAddress": { "type": "string" },
      "methodABI": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "inputs": {
              "type": "array",
              "items": { "type": "object" }
            },
            "name": { "type": "string" },
            "outputs": {
              "type": "array",
              "items": { "type": "object" }
            },
            "stateMutability": { "type": "string" },
            "type": { "type": "string" }
          },
          "required": ["inputs", "name", "outputs", "stateMutability", "type"]
        }
      }
    },
    "required": [
      "network",
      "snapshot",
      "tokenContractAddress",
      "symbol",
      "decimals",
      "minStakedBalance",
      "stakingPoolContractAddress",
      "methodABI"
    ]
  }
}
